[user]
	name = 内藤勇介
	email = yuk@arcstyle.jp
[alias]
  co = checkout
  br = branch
  ci = commit
  sm = submodule
  cp = cherry-pick
  st = status
  stat = status
  me = merge --no-commit --no-ff
  fap = !git fetch --all -p && git pull
  graph = log --graph --date=short --decorate=short --pretty
[color]
  ui = true
[pull]
  rebase = preserve
[push]
  default = current
[merge]
  ff = false
[core]
	excludesfile = /Users/yuk/.gitignore
  autocrlf = input
  editor = vim

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[commit]
  template = /Users/yuk/.stCommitMsg
